<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:buttonStyle">@style/AppTheme.ButtonStyle</item>
    </style>

    <style name="AppTheme.ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="android:minHeight">56dp</item>
    </style>

    <style name="AppTheme.GitHubButton">
        <item name="android:padding">12dp</item>
        <item name="android:src">@drawable/ic_github_circle_white_24dp</item>
    </style>

</resources>
